{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "baseUrl": "dist",
        "target": "ES2019",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "allowJs": true,
        "declaration": true,
        "strict": false,
        "types": [
            "reflect-metadata",
            "node",
            "mocha"
        ],
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    }
}